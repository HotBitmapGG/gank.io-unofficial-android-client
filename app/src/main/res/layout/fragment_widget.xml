<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hotbitmapgg.studyproject.hcc.widget.SpringScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.hotbitmapgg.studyproject.hcc.widget.ItemArrowCardView
                android:id="@+id/widget_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:name="直播点赞爱心动画效果" />

            <include layout="@layout/layout_line_view" />

            <com.hotbitmapgg.studyproject.hcc.widget.ItemArrowCardView
                android:id="@+id/widget_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:name="自定义圆形进度条" />


            <com.hotbitmapgg.studyproject.hcc.widget.ItemArrowCardView
                android:id="@+id/widget_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:name="自定义TableView" />

            <include layout="@layout/layout_line_view" />

            <com.hotbitmapgg.studyproject.hcc.widget.ItemArrowCardView
                android:id="@+id/widget_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:name="贝塞尔线相关" />


            <com.hotbitmapgg.studyproject.hcc.widget.ItemArrowCardView
                android:id="@+id/widget_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:name="仿探探滑动卡片效果" />


        </LinearLayout>

    </com.hotbitmapgg.studyproject.hcc.widget.SpringScrollView>

</LinearLayout>